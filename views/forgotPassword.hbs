<div class="wrap-centralized wrap-forgotPass">
  <div class="container-voltar">
    <a href="/" class="alnk">
      <img src="/images/back.svg" alt="Voltar" class="ico-back">
      <span>
        voltar
      </span>
    </a>
  </div>
  <div class="container-logo">
    <img src="/images/logo.png" alt="MobJobs" class="logoIndex">
    <h1>MobJobs</h1>
  </div>
  <p class="subtitle container-logo_singUp">
    Recupere sua senha aqui<br />
    <strong>Digite seu email abaixo</strong>
  </p>
  <form action="/forgotPassword" method="POST" class="container-login container-forgotPass">
    <div class="container-input">
      <label for="email">Email</label>
      <input type="text" name="email" placeholder="Email de cadastro" class="txtBox txtEmail">
    </div>
    <button class="btn btnForgotPass" type="submit">Enviar</button>
    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>