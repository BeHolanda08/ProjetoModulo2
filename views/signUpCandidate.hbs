<div>
  <h1>MobJobs</h1>
  <p>Precisamos de alguns dados básicos</p>
  <form action="/signUpCandidate" method="POST">

    <label for="name">Nome</label>
    <input type="text" name="name" placeholder="Nome">

    <label for="surName">Sobrenome</label>
    <input type="text" name="surname" placeholder="Sobrenome">

    <label for="celPhone">Celular</label>
    <input type="text" name="celPhone" placeholder="(00) 00000-0000">

    <label for="email">Email</label>
    <input type="text" name="email" placeholder="Esse será seu login">

    <label for="password">Senha</label>
    <input type="password" name="password" placeholder="Senha">

    <label for="password">Confirmar Senha</label>
    <input type="password" name="password2" placeholder="Confirmar Senha">

    <button type="submit">Confirmar</button>

  </form>

  {{#if errorMessage}}
  <p>{{errorMessage}}</p>
  {{/if}}

</div>