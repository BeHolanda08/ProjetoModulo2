<div class="wrap-form">
  <div class="container-voltar">
    <a href="/signUp" class="alnk">
      <img src="/images/back.svg" alt="Voltar" class="ico-back">
      <span>
        voltar
      </span>
    </a>
  </div>
  <div class="container-logo">
    <img src="" alt="MobJobs">
    <h1>MobJobs</h1>
  </div>
  <h2 class="subtitle">Precisamos de alguns dados básicos</h2>
  <form action="/signUpCandidate" method="POST" class="form-container">
    <div class="input-container">
      <label for="name">Nome</label>
      <input type="text" name="name" placeholder="Nome" class="txtBox">
    </div>
    <div class="input-container">
      <label for="surName">Sobrenome</label>
      <input type="text" name="surname" placeholder="Sobrenome" class="txtBox">
    </div>
    <div class="input-container">
      <label for="celPhone">Celular</label>
      <input type="text" name="celPhone" placeholder="(00) 00000-0000" class="txtBox">
    </div>    
    <div class="input-container">
      <label for="email">Email</label>
      <input type="text" name="email" placeholder="Esse será seu login" class="txtBox">
    </div>
    <div class="input-container">
      <label for="password">Senha</label>
      <input type="password" name="password" placeholder="Senha" class="txtBox">
    </div>
    <div class="input-container">
      <label for="password">Confirmar Senha</label>
      <input type="password" name="password2" placeholder="Confirmar Senha" class="txtBox">
    </div>
    <button type="submit" class="btn btnSubmit">Confirmar</button>

    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}
  </form>

</div>