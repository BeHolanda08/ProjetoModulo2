<div>

  <br>
  <form action="/post" class="container-addPost" method="POST" enctype="multipart/form-data">
    <img src="{{ perfil.imagePerfil }}" name="imagePerfil" width="200" height="100" alt="{{ perfil.name }}">
    <img src="{{ perfil.imageCapa }}" name="imageCapa" width="500" height="100" alt="Foto de capa">
    <br>
    <input type="file" name="imageUrl" placeholder="Insira imagem">
    <br>
    <textarea name="message" placeholder="Entre com a mensagem"></textarea>
    <br>
    <button type="submit">Enviar</button>
    <br>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
  </form>

  <br>
  <a href="/update-perfil-candidate/{{perfil._id}}">Editar perfil</a>
  <a href="/home">Home</a>

  <h2>Informações Profissionais</h2>

  <ul>
    <li>{{ perfil.name }}</li>
    <li>{{ perfil.surname }}</li>
    <li>{{ perfil.celPhone }}</li>
    <li>{{ perfil.skill }}</li>
    <li>{{ perfil.address }}</li>
    <li>{{ perfil.number }}</li>
    <li>{{ perfil.complement }}</li>
    <li>{{ perfil.zipCode }}</li>
    <li>{{ perfil.city }}</li>
    <li>{{ perfil.state }}</li>
    <li>{{ perfil.link1 }}</li>
    <li>{{ perfil.link2 }}</li>
    <li>{{ perfil.link3 }}</li>
    <li>{{ perfil.link4 }}</li>
  </ul>

  <h3>Post</h3>
  {{#each myPosts}}
  <div class="post-container">
    <img src="{{ imagePerfil }}" width="10" height="10">
    <img src="{{ image }}" width="200" height="100">
    <p>{{ message }}</p>
    <p></p>
    <a href="/delete-post/{{_id}}">Deletar</a>
  </div>
  {{/each}}

  <a href="/update-perfil-candidate/{{perfil._id}}">Editar perfil</a>
  <a href="/home">Home</a>

</div>