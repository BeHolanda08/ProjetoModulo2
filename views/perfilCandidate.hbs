<div class="content-profile">
  <div class="imageCapa" style="background-image: url({{perfil.imageCapa}})">
    <img src="{{ perfil.imagePerfil }}" name="imagePerfil" class="imagePerfil">
    <p class="nameProfile">{{ perfil.name }} {{ perfil.surname }}</p>
  </div>
  <ul class="links-container">
    {{#if perfil.link1}}
      <li><a href={{ perfil.link1 }} target="_blank"><img src="/images/linkedin.svg" alt="" class="ico-lnks"></a></li>
    {{/if}}
    {{#if perfil.link2}}
      <li><a href={{ perfil.link2 }} target="_blank"><img src="/images/domain.svg" alt="" class="ico-lnks"></a></li>
    {{/if}}
    {{#if perfil.link3}}
      <li><a href={{ perfil.link3 }} target="_blank"><img src="/images/facebook.svg" alt="" class="ico-lnks"></a></li>
    {{/if}}
    {{#if perfil.link4}}
      <li><a href={{ perfil.link4 }} target="_blank"><img src="/images/github.svg" alt="" class="ico-lnks"></a></li>
    {{/if}}
  </ul>
  <ul class="sub-menu-profile">
    <li><a href="/perfil-candidate" class="lnk-subMenuProfile">Compartilhe</a></li>
    <li><a href="" class="lnk-subMenuProfile">Meus posts</a></li>
    <li><a href="" class="lnk-subMenuProfile">Minhas inscrições</a></li>
    <li><a href="" class="lnk-subMenuProfile">Editar Perfil</a></li>
  </ul>
  <!-- <img src="{{ perfil.imageCapa }}" name="imageCapa" alt="Foto de capa" class="imageCapa"> -->
  <div class="profile-content">
    <div class="info-column">
      <h2>Habilidades</h2>
      <ul>
        {{#each skills}}
          <li class="cloudSkills">{{ this }}</li>
        {{/each}}
      </ul>
    </div>
    <div class="content-column">
      <div class="container__create-container">
        <img src={{perfil.imagePerfil}} class="img-perfil-post">
        <form action="/post" class="container-addPost" method="POST" enctype="multipart/form-data">
          <textarea name="message" placeholder="Compartilhe o seu momento..." class="txtArea-post"></textarea>
          <div class="container-submit-post">
            <button type="submit" class="btnSubmit-post">Enviar</button>
            <label for='imageUrl' class="imageUrl"></label>
            <input type="file" id="imageUrl" name="imageUrl" placeholder="Insira imagem" class="upload-post">
          </div>
        </form>
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
      </div>

      <h3>Post</h3>
      {{#each myPosts}}
      <div class="post-container">
        <div class="post-container__profile">
         <!--  <div class="imgProfile">
              <img src={{perfilCandidate.imagePerfil}} alt={{perfil.name}} class="img-perfil-post">
          </div> -->
          <div class="txtProfile">
                <p class="txtProfile__profile-name">{{perfil.name}}</p>
                <p class="txtProfile__profile-data">{{perfil.date}}</p>
          </div>
        </div>
        <div class="post-container__post">
          <img src="{{ image }}" class="post-container__img">
          <p class="post-container__txt">{{ message }}</p>
        </div>
        <a href="/delete-post/{{_id}}"><img src="/images/delete.svg" alt="delete" class="ico-delete"></a>
      </div>
      {{/each}}

    </div>
  </div>
