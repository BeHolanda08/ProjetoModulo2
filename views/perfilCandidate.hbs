<div class="content-profile">
  <div class="imageCapa" style="background-image: url({{perfil.imageCapa}})">
    <img src="{{ perfil.imagePerfil }}" name="imagePerfil" alt="{{ perfil.name }}" class="imagePerfil">
  </div>
  <ul class="links-container">
    <li>{{ perfil.link1 }}</li>
    <li>{{ perfil.link2 }}</li>
    <li>{{ perfil.link3 }}</li>
    <li>{{ perfil.link4 }}</li>
  </ul>
  <ul class="sub-menu-profile">
    <li><a href="/perfil-candidate" class="lnk-subMenuProfile">Compartilhe</a></li>
    <li><a href="" class="lnk-subMenuProfile">Meus posts</a></li>
    <li><a href="" class="lnk-subMenuProfile">Minhas inscrições</a></li>
    <li><a href="" class="lnk-subMenuProfile">Editar Perfil</a></li>
  </ul>
  <!-- <img src="{{ perfil.imageCapa }}" name="imageCapa" alt="Foto de capa" class="imageCapa"> -->
  <div class="profile-content">
    <div class="info-column">
      <h2>Informações Profissionais</h2>
      <ul>
        <li>{{ perfil.name }}</li>
        <li>{{ perfil.surname }}</li>
        <li>{{ perfil.celPhone }}</li>
        <li>{{ perfil.skill }}</li>
        <li>{{ perfil.address }}</li>
        <li>{{ perfil.number }}</li>
        <li>{{ perfil.complement }}</li>
        <li>{{ perfil.zipCode }}</li>
        <li>{{ perfil.city }}</li>
        <li>{{ perfil.state }}</li>
        <li>{{ perfil.link1 }}</li>
        <li>{{ perfil.link2 }}</li>
        <li>{{ perfil.link3 }}</li>
        <li>{{ perfil.link4 }}</li>
      </ul>
    </div>
    <div class="content-column">
      <div class="container__create-container">
        {{#if perfil.imagePerfil}}
        <img src={{perfil.imagePerfil}} alt={{perfil.name}} class="img-perfil-post">
        {{/if}}
        {{#if perfilCompany.imagePerfil}}
        <img src={{perfilCompany.imagePerfil}} alt={{perfilCompany.name}} class="img-perfil-post">
        {{/if}}
        <form action="/post" class="container-addPost" method="POST" enctype="multipart/form-data">
          <textarea name="message" placeholder="Compartilhe o seu momento..." class="txtArea-post"></textarea>
          <div class="container-submit-post">
            <button type="submit" class="btnSubmit-post">Enviar</button>
            <label for='imageUrl' class="imageUrl"></label>
            <input type="file" id="imageUrl" name="imageUrl" placeholder="Insira imagem" class="upload-post">
          </div>
        </form>
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
      </div>

      <br>
      <a href="/update-perfil-candidate/{{perfil._id}}">Editar perfil</a>
      <a href="/home">Home</a>



      <h3>Post</h3>
      {{#each myPosts}}
      <div class="post-container">
        <img src="{{ imagePerfil }}" width="10" height="10">
        <img src="{{ image }}" width="200" height="100">
        <p>{{ message }}</p>
        <p></p>
        <a href="/delete-post/{{_id}}">Deletar</a>
      </div>
      {{/each}}

      <a href="/update-perfil-candidate/{{perfil._id}}">Editar perfil</a>
      <a href="/home">Home</a>

    </div>
